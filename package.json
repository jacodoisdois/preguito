{
  "name": "preguito-monorepo",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w preguito",
    "build": "npm run build -w preguito",
    "test": "npm run test -w preguito",
    "lint": "npm run lint -w preguito",
    "dev:landing": "npm run dev -w @preguito/landing",
    "build:landing": "npm run build -w @preguito/landing",
    "preview:landing": "npm run preview -w @preguito/landing",
    "build:all": "npm run build -w preguito && npm run build -w @preguito/landing"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
