---
// Footer component
const currentYear = new Date().getFullYear();
const version = '0.2.1';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <a href="https://github.com/jacodoisdois/preguito" target="_blank" rel="noopener noreferrer">
          GitHub
        </a>
        <span class="separator">|</span>
        <a href="https://www.npmjs.com/package/preguito" target="_blank" rel="noopener noreferrer">
          npm
        </a>
        <span class="separator">|</span>
        <a href="#docs">
          Docs
        </a>
        <span class="separator">|</span>
        <a href="https://github.com/jacodoisdois/preguito/releases" target="_blank" rel="noopener noreferrer">
          Changelog
        </a>
      </div>

      <div class="footer-info">
        <p class="footer-version">v{version}</p>
        <p class="footer-license">
          MIT License &copy; {currentYear}
        </p>
        <p class="footer-made-with">
          Made with ❤️ and laziness
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-6) 0;
    background-color: var(--bg-secondary);
    border-top: 1px solid var(--border-color);
    margin-top: var(--space-8);
  }

  .footer-content {
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    margin-bottom: var(--space-4);
  }

  .footer-links a {
    color: var(--accent);
    font-weight: 600;
    transition: opacity var(--transition-fast);
  }

  .footer-links a:hover {
    opacity: 0.7;
  }

  .separator {
    color: var(--text-secondary);
    opacity: 0.5;
  }

  .footer-info {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer-info p {
    margin: var(--space-1) 0;
    max-width: none;
    text-align: center;
  }

  .footer-version {
    font-weight: 600;
    color: var(--accent);
  }

  .footer-made-with {
    margin-top: var(--space-2);
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .footer-links {
      flex-direction: column;
      gap: var(--space-1);
    }

    .separator {
      display: none;
    }
  }
</style>
